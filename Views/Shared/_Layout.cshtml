        <footer class="footer hidden-sm hidden-md hidden-lg navbar navbar-fixed-bottom" style="margin-top:50px">
            <div class="container">
                <div class="row">
                    <div class="col-xs-12">
                        <a href="/"><img src="~/Assets/logo.png" class="logo"></a>
                    </div>
                    <div class="col-xs-6">
                        <ul class="list-unstyled footer-nav-links">
                            <li class="text-left"><a href="@Url.Action(" About", "Home" )">About</a></li>
                            <li class="text-left"><a href="#">Terms</a></li>
