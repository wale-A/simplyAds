@model SimplyAds.Models.Advert

@{
    ViewBag.Title = "Advert";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Advert</h2>

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ReferenceNo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReferenceNo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AdContent.FilePath)
        </dt>

        <dd>
            <a href="~/AdContent/@Model.AdContent.FilePath">@Model.AdContent.FileName</a>
        </dd>
                
        <dt>
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerPhone)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerPhone)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CustomerEmail)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DatePlaced)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DatePlaced)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Urgent)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Urgent)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Amount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>

       
        <dt>
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.StartDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Duration)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Duration)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.NoOfCars)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoOfCars)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Treated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Treated)
        </dd>

    </dl>

    @if (!Model.Paid)
    {
        using (Html.BeginForm("PayForAdvert", "Home", new { referenceNo = Model.ReferenceNo }, FormMethod.Post)) {
            @Html.AntiForgeryToken()
            <button class="btn btn-warning btn-lg" type="submit">Pay For Advert</button>
        }
    }

    @if (Model.AdUpdates.Count > 0)
    {
        foreach (var update in Model.AdUpdates)
        {
            if (!update.Deleted)
            {
                <blockquote>
                    <p><b>@update.Text</b></p>
                    <footer>@update.DateCreated.ToShortDateString()</footer>
                </blockquote>
            }
        }
    }


</div>
